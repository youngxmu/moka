	<script type="text/juicer" id="dlg_album_send_tpl">
	<div>
		<dl>
			已选择X张图片
		</dl>
		<dl>
			<dt>发送日期</dt><dd><input id="publish_date" placeholder="发布日期" class="date" ></dd>
		</dl>
	</div>
	</script>
	
	<script type="text/javascript" src="/js/lib/jquery-ui.min.js"></script>
	<script type="text/javascript" src="/js/lib/datetimepicker/jquery-ui-timepicker-addon.min.js"></script>
	<script type="text/javascript" src="/js/lib/datetimepicker/jquery-ui-timepicker-zh-CN.js"></script>
	<script type="text/javascript" src='/js/common/component.js'></script>
	<script type="text/javascript" src='/js/album/benifit.js'></script>

	<script type="text/javascript">
		$(document).ready(function(){
			moka.album.benifit.init();
		});
	</script>
  </body>
  </body>
</html>
