<!DOCTYPE html>
<html>
  <head>
    <title><% if(typeof id != 'undefined'){%>编辑<% }else{ %>新增<% } %>专家信息</title>
    <%- include ../common/meta.ejs %>
    <link rel='stylesheet' href='css/admin/expert/edit.css' />
  </head>
  <body>
    <%- include ../common/header.ejs %>  
    <div class="container">
      <ul class="nav nav-tabs">
        <li role="presentation" data-type="1" class="active"><a href="javascript:void(0);">基本情况</a></li>
        <li role="presentation" data-type="2" ><a href="javascript:void(0);">学术成果</a></li>
        <li role="presentation" data-type="3" ><a href="javascript:void(0);">教学成果</a></li>
      </ul>
      <div id="info_panel" class="main">
        <div class="t-input">
          <label>姓名</label><input id="name" value="" >
        </div>
        <div class="t-input">
          <label>性别</label><input id="gender" value="" >
        </div>
        <div class="t-input">
          <label>生日</label><input id="birthday" value="" >
        </div>
        <div class="t-input">
          <label>职称</label><input id="title" value="" >
        </div>
        <div class="t-input">
          <label>单位</label><input id="unit" value="" >
        </div>
        <div class="t-input">
          <label>地址</label><input id="address" value="" >
        </div>
        <div class="t-input">
          <label>电话</label><input id="tel" value="" >
        </div>
        <div class="t-input">
          <label>方向</label><input id="topic" value="" >
        </div>
        <div class="t-input">
          <label>区域</label><input id="job_type" value="" >
        </div>
        <div class="t-input">
          <label>头像</label><input id="title" value="" >
        </div>
        <div class="t-input">
          <label>描述</label><textarea id="description" ></textarea>
        </div>
        <div class="t-btn" style="margin-top:0;padding-left:60px;">
          <span id="btn_commit" class="btn btn-primary">提交</span>
        </div>
      </div>
      <div id="list_panel" class="main" style="display:none;">
        <table class="table table-striped" style="font-size:14px;">
            <thead>
              <tr>
                <td class="">序号</td>
                <td class="">标题</td>
                <td class="">时间</td>
                <td class="">操作</td>
              </tr>
            </thead>
            <tbody id="resource_list"></tbody>
          </table>
        <div id="pagebar"></div>
      </div>
    </div>
    <script type="text/template" id="result-list-tpl">
    {@each list as obj, index}
    <tr >
      <td class="name">${index|formatIndex}</td>
      <td class="desc"><a href="admin/expert/result/edit/${obj.article_id}?expert_id=${obj.expert_id}" target="_blank">${obj.title}</a></td>
      <td class="desc">${obj.create_time}</td>
      <td class="oper">
        <span data-id="${obj.id}" ><a href="admin/expert/result/edit/${obj.article_id}?expert_id=${obj.expert_id}" target="_blank">编辑</a></span>
        <span data-id="${obj.id}" class="del" ><a target="_blank">删除</a></span>
      </td>
    </tr>
    {@/each}
    </script>
	  <script type="text/javascript" src='js/admin/expert/edit.js'></script>
	
  	<script type="text/javascript">
  		$(document).ready(function(){
  			moka.admin.expert.edit.init();
  		});
  	</script>
  </body>
</html>
