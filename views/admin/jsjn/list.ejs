<!DOCTYPE html>
<html>
  <head>
    <%- include ../common/meta.ejs %>
    <title>军事技能教学</title>
    <link rel='stylesheet' href='css/admin/jsjn/list.css' >
  </head>
  <body>
    <%- include ../common/header.ejs %>   
    <div class="container" >
      <div class="fpanel">
        <ul class="nav nav-tabs sub-nav">
          <li role="presentation" data-type="1" data-mid="1301" class="active">
            <a href="javascript:void(0);">训练组织</a>
          </li>
          <li role="presentation" data-type="2" data-mid="1302"><a href="javascript:void(0);">训练实施</a></li>
          <li>
        </li>
          <div class="tool-bar">
            <span id="btn_search" class="add btn btn-primary" >创建条目</span>
          </div>
        </ul>
        <div id="menu_panel" >
          <div class="sidebar">
            <ul class="res-menu" ></ul>
          </div>
          <div id="editor_box" class="main">
            <textarea id="editor" placeholder="输入文章正文" autofocus><% if(typeof content != 'undefined'){%><%- content %><% } %></textarea>
            <div class="btn-wrapper" style="font-size:14px;margin-top: 15px;text-align:right;">
              <span id="btn_modify" class="btn btn-primary">提交</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script type="text/template" id="submenu-tpl">
    {@each list as obj}
    {@if obj.id != 130202}
    <li data-id="${obj.id}">
      <div class="btn-group">
        <button type="button" class="btn btn-info" data-id="${obj.id}">${obj.name}</button>
        <button type="button" class="btn btn-primary del" data-id="${obj.id}"><span class="glyphicon glyphicon-trash"></span></button>
      </div>
    </li>
    {@/if}
    {@/each}
    </script>

    <script type="text/template" id="edit_menu_dlg">
    <div class="">
      <input id="menu_name" placeholder="输入名称" value="${name}" style="line-height:24px;padding: 0 10px;">
    </div>
    </script>
    <script type="text/javascript" src="js/admin/jsjn/list.js"></script>
    <script>
      $(document).ready(function() {
        $('#navfouce .jsjn').addClass('current');
        moka.admin.jsjn.list.init();
      });
    </script>
  </body>
</html>
