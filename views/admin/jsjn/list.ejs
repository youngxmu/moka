<!DOCTYPE html>
<html>
  <head>
    <%- include ../common/meta.ejs %>
    <title>军事技能教学</title>
    <link rel='stylesheet' href='css/admin/jsjn/list.css' >
  </head>
  <body>
    <%- include ../common/header.ejs %>   
    <div class="container" >
      <div class="fpanel">
        <ul class="nav nav-tabs sub-nav">
          <li role="presentation" data-type="1" data-mid="1301" class="active">
            <a href="javascript:void(0);">训练组织</a>
          </li>
          <li role="presentation" data-type="2" data-mid="1302"><a href="javascript:void(0);">训练实施</a></li>
          <!-- <li role="presentation" data-type="3" data-mid="1303"><a href="javascript:void(0);">辅助资料</a></li> -->
        </ul>
        <div id="menu_panel" >
          <div class="sidebar">
            <ul class="res-menu" ></ul>
          </div>
          <div id="editor_box" class="main">
            <textarea id="editor" placeholder="输入文章正文" autofocus><% if(typeof content != 'undefined'){%><%- content %><% } %></textarea>
            <div class="btn-wrapper" style="font-size:14px;margin-top: 15px;text-align:right;">
              <span id="btn_modify" class="btn btn-primary">提交</span>
            </div>
          </div>
        </div>
        <div id="tree_panel" style="display:none;">
          <div class="sidebar-menu">
            <ul class="type-panel">
              <li data-type="1">
                <i class="type-ico res-txt"></i>
                <p>文字</p>
              </li>
              <li data-type="2">
                <i class="type-ico res-txt"></i>
                <p>图片</p>
              </li>
              <li data-type="3">
                <i class="type-ico res-txt"></i>
                <p>视频</p>
              </li>
              <li data-type="4">
                <i class="type-ico res-txt"></i>
                <p>课件</p>
              </li>
            </ul>
          </div>
          <div class="sidebar-tree">
            <ul id="topic_tree" class="ztree" ></ul>
          </div>
          <div class="main">
            <div id="txt_panel" class="info-content" >
              <textarea class="editor-area" id="txt_editor" placeholder="输入文章正文" autofocus></textarea>
              <div class="btn-wrapper" style="font-size:14px;margin-top: 15px;text-align:right;">
                <span id="btn_txt" class="btn btn-primary">提交</span>
              </div>
            </div>
            <div id="resource_panel" style="display:none;">
              <div id="resource_list"></div>
              <div id="pagebar"></div>
            </div>
          </div>
        </div>  
      </div>
    </div>

    <script type="text/template" id="submenu-tpl">
    {@each list as menu}
    <li><button type="button" class="btn btn-primary" data-id="${menu.id}">${menu.name}</button></li>
    {@/each}
    </script>

    <script type="text/template" id="resource-tpl">
    <div class="res-list">
      <span class="res-type">类型</span>
      <span class="res-title">标题</span>
      <span>作者</span>
      <span>时间</span>
      <span>操作</span>
    </div>
    {@each list as resource}
    <div class="res-list">
      <span class="res-type"><i class="ico ico-${resource.file_name|getFileType}"></i></span>
      <span class="res-title">
        <a href="admin/article/detail/${resource.id}" target="_blank">${resource.title}</a>
      </span>
      <span>${resource.author}</span>
      <span>${resource.create_time}</span>
      <span class="oper">
        <a href="admin/article/detail/${resource.id}" target="_blank" data-id="${resource.id}" class="edit">编辑</a>
        <a href="javascript:void(0);" data-id="${resource.id}" class="del">删除</a>
      </span>
    </div>
    {@/each}
    </script>

    <script type="text/template" id="edit_menu_dlg">
    <div class="">
      <input id="menu_name" placeholder="输入名称" value="${name}" style="line-height:24px;padding: 0 10px;">
    </div>
    </script>



    <script type="text/template" id="pic_tpl">
    <div class="pic_preview">
      <img src="${file_name}" alt="${title}" class="img-thumbnail">
    </div>
    </script>
    <script type="text/template" id="video_tpl">
    <div class="pic_preview">
      <p>
        <a href="${file_name}" class="btn btn-success btn-lg active" role="button">下载到本地</a>
      </p>
      <video id="example_video_1" class="video-js vjs-default-skin"
        controls preload="auto" width="640" height="264" style="width:600px;height:450px;"
        poster="http://video-js.zencoder.com/oceans-clip.png"
        data-setup='{"example_option":true}'>
       <source src="${file_name}" type='video/mp4' />
       <source src="${file_name}" type='video/webm' />
       <source src="${file_name}" type='video/ogg' />
       <p class="vjs-no-js">To view this video please enable JavaScript, and consider upgrading to a web browser that <a href="http://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a></p>
      </video>
    </div>
    </script>

    <script type="text/template" id="ppt_tpl">
    <div class="pic_preview">
       <p><a href="${file_name}" class="btn btn-success btn-lg active" role="button">下载到本地</a></p>
    </div>
    </script>


    <script type="text/javascript" src="simditor/scripts/module.js"></script>
    <script type="text/javascript" src="simditor/scripts/hotkeys.js"></script>
    <script type="text/javascript" src="simditor/scripts/uploader.js"></script>
    <script type="text/javascript" src="simditor/scripts/simditor.js"></script>
    
    <script type="text/javascript" src="js/admin/jsjn/jsjn.js"></script>
    <script type="text/javascript" src="js/admin/jsjn/list.js"></script>
    
    <script>
      $(document).ready(function() {
        $('#navfouce .jsjn').addClass('current');
        moka.admin.jsjn.list.init();
      });
    </script>
  </body>
</html>
