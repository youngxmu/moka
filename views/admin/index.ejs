<!DOCTYPE html>
<html>
  <head>
    <title>首页管理</title>
    <%- include common/meta.ejs %>
    <link rel='stylesheet' href='css/zTreeStyle/zTreeStyle.css' >
    <link rel="stylesheet" type="text/css" href="simditor/styles/simditor.css" />
    <link rel='stylesheet' href='css/admin/article/list.css' >
    <style type="text/css">
    .container{padding-bottom: 50px;}
    .news-edit{
      border-bottom: 1px solid #cccccc;
      padding: 10px 0;
    }

    .news-edit:last-child{
      border:0;
    }

    .news-edit dl {
        line-height: 30px;
        margin: 0 0 10px 0;
    }

    .news-edit dl input{
        width: 800px;
        line-height: 30px;
        border: 1px solid #cccccc;
        padding: 0 10px;
    }

    .btn-wrapper{margin: 10px;}
    .btn-commit{display: inline-block;line-height: 30px;padding: 0 20px;border: 1px solid #cccccc;
      cursor: pointer;
    }

    </style>
  </head>
  <body>
    <%- include common/header.ejs %>
  	<div class="container">
      <ul class="nav nav-tabs">
        <li role="presentation" target="info_panel" class="active"><a href="javascript:void(0);">基本信息</a></li>
        <li role="presentation" target="xs_panel" ><a href="javascript:void(0);">资源</a></li>
        <li role="presentation" target="jx_panel" ><a href="javascript:void(0);">图片资源</a></li>
      </ul>
      <div id="list_panel">
        <div class="sidebar">
          <div class="tree-opr">
            <a href="javascript:void(0);" class="unfold">展开</a>
          </div>
          <div style="overflow:auto;min-height:500px;" >
            <ul id="topic_tree" class="ztree"></ul>
          </div>
        </div>
        <div id="list_box" class="main">
          <div class="resource-opr">
            <a href="javascript:void(0);" class="add">增加</a>
          </div>
          <div id="resource_list"></div>
          <div id="pagebar"></div>
        </div>
        <div id="editor_box" class="main" style="display:none;">
          <textarea id="editor" placeholder="输入文章正文" autofocus><% if(typeof content != 'undefined'){%><%- content %><% } %> </textarea>
          <div class="btn-wrapper" style="font-size:14px;">
            <span id="btn_modify" class="btn-commit">提交</span>
          </div>
        </div>
        
      </div>
      <div id="pic_panel" style="display:none;">
        <div id="news_panel"></div>
        <div class="btn-wrapper" style="font-size:14px;">
          <span id="btn_commit" class="btn-commit">提交</span>
        </div>  
      </div>
    	
	  </div>

    <script type="text/template" id="news-tpl">
    {@each list as news, index}
    <div class="news-edit">
        <dl>
          <label>首页图文序号${news.index}</label>
        </dl>
        <dl>
          <label>标题：</label><input class="newstitle" name="title" value="${news.title}">
        </dl>
        <dl>
          <label>链接：</label><input class="link" name="link" value="${news.link}">
        </dl>
        <dl>
          <label>图片：</label><input class="pic_url" name="pic_url" value="${news.pic_url}">
        </dl>
    </div>
    {@/each}
    </script>

    <script type="text/template" id="resource-tpl">
    <div class="res-list">
      <span class="res-type">类型</span>
      <span class="res-title">标题</span>
      <span>作者</span>
      <span>时间</span>
      <span>操作</span>
    </div>
    {@each list as resource}
    <div class="res-list">
      <span class="res-type"><i class="ico ico-${resource.file_name|getFileType}"></i></span>
      <span class="res-title">
        <a href="admin/article/detail/${resource.id}" target="_blank">${resource.title}</a>
      </span>
      <span>${resource.author}</span>
      <span>${resource.create_time}</span>
      <span class="oper">
        <a href="javascript:void(0);" target="_blank" data-id="${resource.id}" class="edit">编辑</a>
        <a href="javascript:void(0);" data-id="${resource.id}" class="del">删除</a>
      </span>
    </div>
    {@/each}
    </script>

    <script type="text/javascript" src="js/lib/jquery.ztree.all.min.js"></script>
    <script type="text/javascript" src="simditor/scripts/module.js"></script>
    <script type="text/javascript" src="simditor/scripts/hotkeys.js"></script>
    <script type="text/javascript" src="simditor/scripts/uploader.js"></script>
    <script type="text/javascript" src="simditor/scripts/simditor.js"></script>
    <script type="text/javascript" src="js/admin/index.js"></script>
    <script>
      $(document).ready(function() {
          moka.admin.index.init();
      });
    </script>
  </body>
</html>
