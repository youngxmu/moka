<!DOCTYPE html>
<html>
  <head>
    <%- include ../common/meta.ejs %>
    <title>国防教育资源库</title>
    <link rel='stylesheet' href='css/admin/article/list.css' >
  </head>
  <body>
    <%- include ../common/header.ejs %>
  	<div class="container">
      <div class="fpanel">
        <ul class="nav nav-tabs sub-nav">
          <!-- <li data-type="1" ><a href="admin/article/infolist">教育资料</a></li>
          <li data-type="2" class="active" ><a href="javascript:void(0);">相关文件</a></li> -->
          <li data-type="1" data-id="1102" class="active" ><a href="javascript:void(0);">视频</a></li>
          <li data-type="2" data-id="1103" ><a href="javascript:void(0);">照片</a></li>
          <li data-type="3" data-id="1101" ><a href="javascript:void(0);">课件</a></li>
          <li data-type="4" data-id="1104" ><a href="javascript:void(0);">文字</a></li>
        </ul>
        <div id="tree_panel" style="display:none;">
          <div class="sidebar">
           <!--  <div class="tree-opr">
              <a href="javascript:void(0);" class="unfold">展开</a>
              |<a href="javascript:void(0);" class="add">增加</a>
              |<a href="javascript:void(0);" class="edit">编辑</a>
              |<a href="javascript:void(0);" class="del">删除</a>
            </div> -->
            <div style="overflow:auto;min-height:500px;" >
              <ul id="topic_tree" class="ztree"></ul>
              <ul id="series_tree" class="ztree" style="display:none;"></ul>
            </div>
          </div>
          <div class="main">
              <!-- <div class="resource-opr">
                <a href="javascript:void(0);" class="add">增加</a>
              </div> -->
              <div class="info-content" >
                <div class="info-content" >
                  <div class="editor-title">
                    <label>名称</label>
                    <input  id="txt_title" value="">
                  </div>
                  <textarea class="editor-area" id="content" placeholder="输入文章正文" autofocus></textarea>
                  <div class="btn-wrapper" style="font-size:14px;margin-top: 15px;text-align:right;">
                    <span id="btn_commit" class="btn btn-primary">提交</span>
                  </div>
                </div>
              </div>
            </div>
        </div>

        <div id="list_panel" >
          <div class="main list-main">
            <div class="resource-opr">
              <a href="javascript:void(0);" class="add">增加</a>
            </div>
            <div id="article_list"></div>
            <div id="pagebar"></div>
          </div>
        </div>
      </div>
	  </div>

    
    <script type="text/template" id="resource-tpl">
    <div class="res-list">
      <span class="res-type">类型</span>
      <span class="res-title">标题</span>
      <span>作者</span>
      <span>时间</span>
      <span>操作</span>
    </div>
    {@each list as resource}
    <div class="res-list">
      <span class="res-type"><i class="ico ico-${resource.file_name|getFileType}"></i></span>
      <span class="res-title">
        <a href="admin/article/detail/${resource.id}" target="_blank">${resource.title}</a>
      </span>
      <span>${resource.author}</span>
      <span>${resource.create_time}</span>
      <span class="oper">
        <a href="admin/article/detail/${resource.id}" target="_blank" data-id="${resource.id}" class="edit">编辑</a>
        <a href="javascript:void(0);" data-id="${resource.id}" class="del">删除</a>
      </span>
    </div>
    {@/each}
    </script>

    <script type="text/template" id="resource2-tpl">
    <div class="res-list">
      <span class="res-type">类型</span>
      <span class="res-title">标题</span>
      <span>作者</span>
      <span>时间</span>
      <span>操作</span>
    </div>
    {@each list as resource}
    <div class="res-list">
      <span class="res-type"><i class="ico ico-${resource.content_type|getTypeName}"></i></span>
      <span class="res-title">
        <a href="resource/detail/${resource.id}" target="_blank">${resource.title}</a>
      </span>
      <span>${resource.author}</span>
      <span>${resource.create_time}</span>
      <span class="oper">
        <a href="admin/article/detail/${resource.id}" target="_blank" data-id="${resource.id}" class="edit">编辑</a>
        <a href="javascript:void(0);" data-id="${resource.id}" class="del">删除</a>
      </span>
    </div>
    {@/each}
    </script>
    <%- include ../common/menu-tpl.ejs %>
    
    <script type="text/javascript" src="js/admin/article/list.js"></script>
    <script>
      $(document).ready(function() {
        $('#navfouce .resource').addClass('current');
        moka.admin.article.list.init();
      });
    </script>
  </body>
</html>
