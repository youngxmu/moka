<!DOCTYPE html>
<html>
  <head>
    <%- include ../common/meta.ejs %>
    <title>首页管理</title>
    <link rel='stylesheet' href='css/index/list.css' >
  </head>
  <body>
    <%- include ../common/header.ejs %>
  	<div class="container">
      <ul class="nav nav-tabs">
        <li role="presentation" class="active">
          <a href="javascript:void(0);">国防动态管理</a>
        </li>
      </ul>
      <div class="main">
        <div class="res-list">
          <span class="res-title">标题</span>
          <span>作者</span>
          <span>时间</span>
          <span>操作</span>
        </div>
        <div id="news_list"></div>
        <div id="pagebar"></div>
      </div>
	  </div>

    <script type="text/template" id="news-tpl">
    {@each list as resource}
    <div class="res-list">
      <span class="res-title">
        <a href="resource/detail/${resource.id}" target="_blank">${resource.title}</a>
      </span>
      <span>${resource.author}</span>
      <span>${resource.create_time}</span>
      <span>
        <a class="btn btn-default btn-xs" data-id="${resource.id}">编辑</a>
        <a class="btn btn-default btn-xs" data-id="${resource.id}">删除</a>
      </span>
    </div>
    {@/each}
    </script>
    <script type="text/javascript" src="js/admin/index/news.js"></script>
    <script>
      $(document).ready(function() {
          moka.admin.indexn.init();
      });
    </script>
  </body>
</html>
