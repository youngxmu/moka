    				</tr>
    			</thead>
    			<tbody id="model_list">
				{@each i in range(1, 21)}
					<tr>
						<td>${i}</td>
						<td><input name="" ></td>
						<td><input name="" ></td>
						<td><input name="" ></td>
						<td><input name="" ></td>
						<td><input name="" ></td>
						<td><input name="" ></td>
						<td><input name="" ></td>
						<td><input name="" ></td>
						<td><input name="" ></td>
						<td><input name="" ></td>
						<td><input name="" ></td>
						<td><input name="" ></td>
						<td><input name="" ></td>
						<td><input name="" ></td>
						<td><input name="" ></td>
					</tr>
				{@/each}
    			</tbody>
    		</table>

    	</div>
	</script>

	<script type="text/juicer" id="dlg_edit_model">
	<div id="edit_model_panel" class="v-table" >
		<dl>
			<dt>姓名</dt><dd><input name="name" value="${name}"></dd>
			<dt>手机</dt><dd><input name="tel" value="${tel}"></dd>
		</dl>
		<dl>
			<dt>生日</dt><dd><input name="birth" value="${birthday}"></dd>
			<dt>身高</dt><dd><input name="height" value="${height}"></dd>
		</dl>
		<dl>
			<dt>胸围</dt><dd><input name="b" value="${b}"></dd>
			<dt>腰围</dt><dd><input name="w" value="${w}"></dd>
		</dl>
		<dl>
			<dt>臀围</dt><dd><input name="h" value="${h}"></dd>
			<dt>罩杯</dt>
			<dd>
				<select name="cup">
					<option value="A" {@if cup == "A"}selected="selected"{@/if}>A</option>
					<option value="B" {@if cup == "B"}selected="selected"{@/if}>B</option>
					<option value="C" {@if cup == "C"}selected="selected"{@/if}>C</option>
					<option value="D" {@if cup == "D"}selected="selected"{@/if}>D</option>
					<option value="E" {@if cup == "E"}selected="selected"{@/if}>E</option>
					<option value="F" {@if cup == "F"}selected="selected"{@/if}>F</option>
					<option value="G" {@if cup == "G"}selected="selected"{@/if}>G</option>
				</select>
			</dd>
		</dl>
		<dl>
			<dt>体重</dt><dd><input value=""></dd>
			<dt>积分</dt><dd><input name="jifen" value="${jifen}"></dd>
		</dl>
		<dl>
			<dt>微信</dt><dd><input name="weixin" value=""></dd>
			<dt>密码</dt><dd><input type="password" name="password" value=""></dd>
		</dl>
		<dl>
			<dt>虚拟</dt>
			<dd>
				<select name="isVirtual">
					<option value="1" {@if is_virtual == 1}selected="selected"{@/if}>是</option>
					<option value="0" {@if is_virtual == 0}selected="selected"{@/if}>否</option>
				</select>
			</dd>
		</dl>
		<dl>
			<dt>头像</dt>
			<dd style="width:200px;">
				<input id="profile_url" type="hidden" name="profile" >
				<span id="dlg_btn_upload" class="s-btn">上传头像</span>
				<em class="tag" style="color:#cccccc;margin-left:5px;">至少500*500像素</em>
			</dd>
		</dl>
		<dl>
			<dt>&nbsp;</dt>
			<dd>
				<span id="dlg_avator_${id}" class="dlg-avator">
					{@if profile}
						<img style="max-width:80px;max-height:80px;" src="${host}${profile}" />
					{@/if}
				</span>
			</dd>
		</dl>
	</div>
	</script>
	
	<script type="text/juicer" id="dlg_view_album" >
	<div id="album_list">
		{@each list as obj, index}
		{@if obj.pic}
		<div class="album-box" data-id="${obj.id}" data-index="${index}">
			<div class="album-img-wraper" >
				<img src="${host}${obj.pic}">
			</div>
		</div>
		{@/if}
		{@/each}
	</div>
	</script>

	<script type="text/javascript" src='/js/common/component.js'></script>
	<script type="text/javascript" src='/js/customer/model.js'></script>
	
	<script type="text/javascript">
		$(document).ready(function(){
			moka.customer.model.init();
		});
	</script>
  </body>
  </body>
</html>
