<!DOCTYPE html>
<html>
  <head>
    <title>军事技能学习</title>
    <%- include ../common/meta.ejs %>
    <link rel='stylesheet' href='css/zTreeStyle/zTreeStyle.css' >
    <link rel='stylesheet' href='css/user/jsjn/jsjn.css' >
    <link rel='stylesheet' href='css/user/jsjn/list.css' >
    
  </head>
  <body>
    <%- include ../common/header.ejs %>   
    <div class="nav">
      <ul class="nav-ul">
        <li data-type="1" class="active">
          <a href="javascript:void(0);">训练计划</a>
        </li>
        <li data-type="2">
          <a href="javascript:void(0);" class="active">训练实施</a>
        </li>
        <li data-type="3">
          <a href="javascript:void(0);" >辅助资料</a>
        </li>
      </ul>
    </div>


      
      
  	<div class="container">
      <div class="sidebar">
        <ul id="menu_panel" class="memu-panel"></ul>
        <!-- <div id="tree-panel">
          
        </div>
        <div class="tree-opr">
          <a href="javascript:void(0);" class="unfold">展开</a>
        </div> -->
        <ul id="topic_tree" class="ztree" style="display:none;"></ul>
      </div>
      <div class="main">
        <div id="content" class="info-content" ></div>
        <div id="resource_panel" style="display:none;">
          <div id="resource_list"></div>
          <div id="pagebar"></div>
        </div>
        
      </div>
	  </div>
    <%- include ../common/footer.ejs %>   
    
    <script type="text/template" id="resource-tpl">
    <div class="res-list">
      <span class="res-type">类型</span>
      <span class="res-title">标题</span>
      <span>作者</span>
      <span>时间</span>
    </div>
    {@each list as resource}
    <div class="res-list">
      <span class="res-type"><i class="ico ico-${resource.file_name|getFileType}"></i></span>
      <span class="res-title">
        <a href="jsjn/detail/${resource.id}" target="_blank">${resource.title}</a>
      </span>
      <span>${resource.author}</span>
      <span>${resource.create_time}</span>
    </div>
    {@/each}
    </script>

    <script type="text/template" id="edit_menu_dlg">
    <div class="">
      <input id="menu_name" placeholder="输入名称" value="${name}" style="line-height:24px;padding: 0 10px;">
    </div>
    </script>
    <script type="text/javascript" src="js/lib/jquery.ztree.all.min.js"></script>
    <script type="text/javascript" src="js/user/jsjn/jsjn.js"></script>
    <script type="text/javascript" src="js/user/jsjn/list.js"></script>
    
    <script>
      $(document).ready(function() {
          moka.user.jsjn.list.init();
      });
    </script>
  </body>
</html>
