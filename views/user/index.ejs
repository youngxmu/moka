<!DOCTYPE html>
<html>
  <head>
    <title>数字资源</title>
    <%- include ../common/meta.ejs %>
    <link rel='stylesheet' href='/css/index.css' />
  </head>
  <body>
    <%- include ../common/header.ejs %>
    <div class="nav">
      <% for(var index in menuList){ %>
      <% var menu = menuList[index]; %>
        <a href="/article/list/<%= menu.id %>" ><%= menu.name %></a>
      <% } %>
    </div>
  	<div class="container">
      <div class="main">
        <% for(var index in menuList){ %>
          <% var menu = menuList[index]; %>
          <div id="module_<%= menu.id %>" data-id="<%= menu.id %>" class="thp">
            <div class="thp-banner">
              <%= menu.name %><div class="more-link">更多</div>
            </div>
            <ul class="thp-list"></ul>
          </div>
        <% } %>
      </div>
	  </div>

    <script type="text/template" id="article_list_tpl">
    {@each list as resource}
    <li>
      <a href="/article/detail/${resource.id}" target="_blank">${resource.title}</a>
      <span class="date">${resource.create_time|getMD}</span>
    </li>
    {@/each}
    </script>

    <script type="text/javascript" src="/js/index.js"></script>
    <script>
      $(document).ready(function() {
        moka.index.init({});
      });
    </script>
  </body>
</html>
