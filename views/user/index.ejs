<!DOCTYPE html>
<html>
  <head>
    <title>首页</title>
    <%- include common/meta.ejs %>
  </head>
  <body>
    <%- include common/header.ejs %>
    <div class="container">
      <div class="main">
        <% for(var index in menuList){ %>
          <% var menu = menuList[index]; %>
          <div id="module_<%= menu.id %>" data-id="<%= menu.id %>" class="thp">
            <div class="thp-banner">
              <%= menu.name %>
              <div class="more-link">
                <a href="<%= menu.url %>" target="_blank">更多</a>
              </div>
            </div>
            <ul class="thp-list"></ul>
          </div>
        <% } %>
      </div>
    </div>

    <script type="text/template" id="article_list_tpl">
    {@each list as resource}
    <li>
      <a href="article/detail/${resource.id}" target="_blank">${resource.title}</a>
      <span class="date">${resource.create_time|getMD}</span>
    </li>
    {@/each}
    </script>

    <script type="text/template" id="paper_list_tpl">
    {@each list as resource}
    <li>
      <a href="paper/detail/${resource.id}" target="_blank">${resource.name}</a>
      <span class="date">${resource.create_time|getMDH}</span>
    </li>
    {@/each}
    </script>

    <script type="text/javascript" src="js/index.js"></script>
    <script>
      $(document).ready(function() {
        moka.index.init({});
      });
    </script>
  </body>
</html>
