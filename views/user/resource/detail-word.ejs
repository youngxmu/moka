<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%- include ../common/meta.ejs %>
    <link rel='stylesheet' href='css/user/resource/resource.css' >
    <link rel='stylesheet' href='css/user/resource/detail.css' />
  </head>
  <body>
    <div class="bg">
  	<%- include ../common/header.ejs %>
    <div class="container ">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title"><%= title %></h3>
        </div>
        <div class="panel-body detail-article">
          <div class="t-input">
            <label>资源标题</label>
            <span class="text"><%= title %></span>
          </div>
          <div class="t-input">
            <label>作者名称</label>
            <span class="text"><%= author %></span>
          </div>
          <div class="t-input">
            <label>发布时间</label>
            <span class="text"><%= update_time %></span>
          </div>
          <div class="t-input">
            <label>资源描述</label>
            <span class="text"><%= description %></span>
          </div>
          <div class="t-input">
            <label>资源链接</label>
            <span class="text"><a href="<%= file_name %>" download class="download"><%- title %></a></span>
          </div>
          <div id="ppt_pdf" data-view="<%=view_name%>" class="ppt-view-panel" style="width:650px;height:400px;"></div>
          <div class="t-input">
            <label>所属栏目</label>
            <div class="u-select-p">
            <% if(typeof menuList != 'undefined'){%>
            <% for(var index in menuList) { %> 
            <% var menu = menuList[index]; %> 
            <span class="s-menu" data-id="<%= menu.id %>" ><%= menu.name %></span>
            <% } %> 
            <% } %> 
            </div>
          </div>
        </div>
      </div>
  	</div>
    </div>
    <%- include ../common/footer.ejs %>
    <script type="text/javascript" src='js/user/resource/resource.js'></script>
  	<script type="text/javascript" src='js/user/resource/detail.js'></script>
  	
  	<script type="text/javascript">
  		$(document).ready(function(){
  			moka.user.resource.detail.init();
        var view_name = $('#ppt_pdf').attr('data-view');
        if(view_name && view_name!= ''){
          PDFObject.embed('uploads/'+ view_name, "#ppt_pdf");
        }
  		});
  	</script>
  </body>
</html>
