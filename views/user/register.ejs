<!DOCTYPE html>
<html>
  <head>
    <title>注册</title>
    <link rel='stylesheet' href='/css/common.css' />
    <link rel='stylesheet' href='/css/style.css' />
    <script src='http://cdn.staticfile.org/jquery/1.9.1/jquery.min.js'></script>
  </head>
  <body>

  <div class="login_bg">
    <div style="position:absolute;left:20px;top:20px;" class="login-logo"></div>
      <form method="post" id="ajax_login_form" action="/user/register">
        <input name="type" value="1" type="hidden"><!--普通用户登录-->
        <div class="login_con">
          <h1 style="color:#474747">注册</h1>
          <div class="login_list">
            <div class="login_line">
              <p>邮箱</p>
              <input type="text" placeholder="登录名" name="email" class="input_text" >
            </div>
            <div class="login_line">
              <p>密码</p>
              <input type="password" placeholder="密码" name="password" class="input_text">
            </div>
            <div class="btn_wrap" id="login_submit">
              <a href="javascript:void(0)" class="btn_green37">注册</a>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
 	
  <script type="text/javascript">
    $(document).ready(function(){
      $('#login_submit').click(function(){
        $('#ajax_login_form')[0].submit();
      });

      $('body').on('keydown','#ajax_login_form',function(e){
        var event = window.event || e;
        if(event.keyCode == 13){
          $('#ajax_login_form')[0].submit();
        }
      });
    });
  </script>
  </body>
</html>
