<!DOCTYPE html>
<html>
  <head>
    <title>学习考试管理</title>
    <%- include ../common/meta.ejs %>
    <link rel='stylesheet' href='css/user/paper/paper.css' >
    <style type="text/css">
    .header{
        display: none;
    }
    .container{
        background: transparent;
    }
    </style>
  </head>
  <body>
    <div class="bg">
    <%- include ../common/header.ejs %>
    <div  class="container">
      <div class="index-main" >
        <div class="sys-logo"> <div class="sys-title"></div></div>
        <div class="login-panel">
          <div class="sys-info">
              <div class="sys-info-txt">
                军事理论教学，自测
              </div>
              <div class="sys-info-img">
                <div class="">
                  <img src="img/paper/study.png" class="img-thumbnail">
                </div>
              </div>
          </div>
          <div class="login-bg">
            <form method="post" action="auth/user/login">
              <h3>登录</h3>
              <input type="hidden" name="sysType" value="paper">
              <input class="form-control" name="email" type="text" placeholder="用户名/邮箱">
              <input class="form-control" name="password" type="password" placeholder="密码">
              <% if(typeof errmsg != 'undefined'){%>
              <div class="alert alert-danger" role="alert"><%= errmsg %></div>
              <% } %>
              <div class="login-btn-wrapper">
                <button type="submit" class="btn btn-primary">登录</button>
                <a href="user/register" class="btn btn-primary" role="button">注册</a>
              </div>
              <div class="sys-enter">
                <div class="btn"><a href="paper/list">进入系统</a></div>
              </div>
            </form>
          </div>
        </div>
      </div>

      <div class="main" style="display:none;">
       

        <div class="login-panel">
            <div class="sys-info">
                <div class="sys-info-txt">
                  军事理论教学，自测
                </div>
                <div class="sys-info-img">
                  <div class="">
                    <img src="img/paper/study.png" class="img-thumbnail">
                  </div>
                </div>
            </div>
          
            <div class="login-bg">
            <form method="post" action="auth/user/login">
              <h3>登录</h3>
              <input type="hidden" name="sysType" value="paper">
              <input class="form-control" name="email" type="text" placeholder="用户名/邮箱">
              <input class="form-control" name="password" type="password" placeholder="密码">
              <% if(typeof errmsg != 'undefined'){%>
              <div class="alert alert-danger" role="alert"><%= errmsg %></div>
              <% } %>
              <div class="login-btn-wrapper">
                <button type="submit" class="btn btn-primary">登录</button>
                <a href="user/register" class="btn btn-primary" role="button">注册</a>
              </div>
              <div class="sys-enter">
                  <div class="btn"><a href="jsjn/list">进入系统</a></div>
                </div>
            </form>
          </div>
          
        </div>
      </div>
    </div>
    </div>
    
  </body>
</html>
